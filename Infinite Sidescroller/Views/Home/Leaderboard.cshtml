@model Infinite_Sidescroller.Models.LeaderboardViewModel
@{
    ViewBag.Title = "Leaderboard";
}
<section id="leaderboard_wrapper">
    <div id="leaderboard_header">
        <h1>TOP SCORES LEADERBOARD</h1>
    </div>
    <table id="leaderboard_table">
        <tbody>
            <tr>
                <th>Rank</th>
                <th>Score</th>
                <th>Username</th>
            </tr>
          @for (int i = 1; i <= Model.Highscores.Count; i++)
          {
            <tr @Html.Raw(i % 2 == 0 ? "class='alt_color'" : "")>
              <td>@i</td>
              <td>@Model.Highscores[i].Score</td>
              <td>@Model.Highscores[i].UserID</td>
            </tr>
          }
    </tbody>
    </table>
</section>